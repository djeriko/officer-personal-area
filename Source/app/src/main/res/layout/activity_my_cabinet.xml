<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/change_photo"
            android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="125dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="30dp"
            app:layout_goneMarginTop="80dp"/>
    <TextView
            android:text="ID"
            android:textColor="#38393B"
            android:textSize="20sp"
            android:layout_width="19dp"
            android:layout_height="24dp"
            android:id="@+id/textViewID"
            android:layout_marginTop="143dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="139dp"/>
    <EditText
            android:layout_width="181dp"
            android:inputType="textPersonName"

            android:text="Name"
            android:ems="10"
            android:id="@+id/editText" android:layout_marginEnd="92dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="192dp" android:layout_height="40dp"/>
    <RadioButton
            android:text="Female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="28dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="239dp"/>
    <RadioButton
            android:text="Male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="139dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="239dp"/>
    <Spinner
            android:id="@+id/profile_age_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:entries="@array/men_years"
            android:hint="Возраст"

            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="244dp" android:layout_marginEnd="44dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Spinner
            android:id="@+id/profile_work_spinner"
            android:layout_width="288dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:entries="@array/work_place"
            android:hint="Возраст"

            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="308dp" android:layout_marginEnd="68dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Save"

            android:layout_width="203dp"
            android:layout_height="57dp"
            android:id="@+id/button"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="144dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="96dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>