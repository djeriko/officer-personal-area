<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/Researches_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:animateLayoutChanges="true"
        android:elevation="30dp"
        app:cardCornerRadius="30dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/res_expand_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="176dp"
                android:layout_marginBottom="8dp"
                android:elevation="4dp"
                android:onClick="show"
                android:src="@drawable/expand"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/res_collapse_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="176dp"
                android:layout_marginBottom="8dp"
                android:elevation="4dp"
                android:onClick="hide"
                android:src="@drawable/collapse_image"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/researches_image"
                android:layout_width="93dp"
                android:layout_height="75dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/research_image_1" />

            <TextView
                android:id="@+id/cabinet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="36dp"
                android:text="Кабинет"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/floor_and_cabinet"
                android:layout_width="86dp"
                android:layout_height="42dp"
                android:layout_marginEnd="36dp"
                android:layout_marginBottom="21dp"
                android:text="1 этаж , 2 кабинет "
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/researches_title"
                android:layout_width="169dp"
                android:layout_height="61dp"
                android:layout_marginStart="121dp"
                android:layout_marginTop="26dp"
                android:text="Внутриглазное давление (от 60 и старше лет) "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/res_item_about"
                android:layout_width="279dp"
                android:layout_height="66dp"
                android:layout_marginStart="60dp"
                android:layout_marginBottom="60dp"
                android:text="Ежедневно около 800 сотрудников компании делают все возможное, чтобы на складах и прилавках наших магазинов были только свежие и качественные продукты"
                android:textColor="#4A4956"
                android:textSize="14sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>